<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/colorCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    style="?attr/materialCardViewFilledStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 4-Box Miniature Wallpaper Preview (2x2 grid) -->
            <FrameLayout
                android:id="@+id/previewContainer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp">

                <!-- 2x2 Grid: Top-left, Top-right, Bottom-left (past/future), Bottom-right (current) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Top Row: 2 past/future boxes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <View
                            android:id="@+id/boxTopLeft"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp" />

                        <View
                            android:id="@+id/boxTopRight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <!-- Bottom Row: 1 past/future (left), 1 current (right) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/boxBottomLeft"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp" />

                        <View
                            android:id="@+id/boxBottomRight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Scheme Name -->
            <TextView
                android:id="@+id/schemeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Scheme Name" />
        </LinearLayout>

        <!-- Checkmark (when selected) -->
        <TextView
            android:id="@+id/checkmarkIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:text="âœ“"
            android:textSize="24sp"
            android:textColor="?attr/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone" />

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
