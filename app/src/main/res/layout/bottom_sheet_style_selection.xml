<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:background="?attr/colorOnSurfaceVariant"
        android:alpha="0.4" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/style_title"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />

    <!-- Shape Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/style_shape"
        android:textAppearance="?attr/textAppearanceTitleSmall"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/shapeToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShapeCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shape_circle"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShapeRounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shape_rounded"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShapeRhombus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shape_rhombus"
            style="@style/Widget.Material3.Button.OutlinedButton" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Size Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/style_size"
            android:textAppearance="?attr/textAppearanceTitleSmall" />
        <TextView
            android:id="@+id/sizeValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/sizeSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0.5"
        android:valueTo="1.0"
        android:stepSize="0.05"
        android:value="1.0"
        app:labelBehavior="gone"
        android:layout_marginBottom="16dp" />

    <!-- Padding Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/style_padding"
            android:textAppearance="?attr/textAppearanceTitleSmall" />
        <TextView
            android:id="@+id/paddingValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5%"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/paddingSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0.0"
        android:valueTo="0.2"
        android:stepSize="0.01"
        android:value="0.05"
        app:labelBehavior="gone"
        android:layout_marginBottom="16dp" />

    <!-- Blink Period Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/style_blink_period"
            android:textAppearance="?attr/textAppearanceTitleSmall" />
        <TextView
            android:id="@+id/blinkPeriodValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000ms"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/blinkPeriodSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="500"
        android:valueTo="5000"
        android:stepSize="100"
        android:value="2000"
        app:labelBehavior="gone"
        android:layout_marginBottom="24dp" />

    <!-- Color Scheme Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/color_scheme_label"
        android:textAppearance="?attr/textAppearanceTitleSmall"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/colorCardsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="200dp"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/applyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Apply"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>

</LinearLayout>
