<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_description"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_date_label"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginBottom="8dp"/>
        
        <DatePicker
            android:id="@+id/birthDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:layout_marginBottom="24dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expected_lifespan_label"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginBottom="8dp"/>
        
        <EditText
            android:id="@+id/lifespanInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="90"
            android:hint="@string/expected_lifespan_hint"
            android:layout_marginBottom="24dp"
            android:minWidth="100dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBodyLarge"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color_scheme_label"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginBottom="8dp"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/chooseColorsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_color_scheme"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginBottom="8dp"/>
        
        <TextView
            android:id="@+id/selectedSchemeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected: Onyx"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:layout_marginBottom="24dp"
            android:visibility="visible" />
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/getStartedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_started"
            style="?attr/materialButtonStyle"/>
        
    </LinearLayout>
</ScrollView>
