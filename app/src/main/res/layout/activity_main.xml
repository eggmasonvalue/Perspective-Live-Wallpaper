<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <!-- Mode Selector Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/modeTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill" />
    
    <!-- Count to Life Section -->
    <ScrollView
        android:id="@+id/lifeCalendarSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="visible">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macro"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Each square represents one year of your life"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:layout_marginBottom="24dp"/>
            
            <!-- Current Settings Display -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="?attr/materialCardViewFilledStyle">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_settings"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_marginBottom="12dp"/>
                    
                    <TextView
                        android:id="@+id/currentBirthDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birth Date: --"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="4dp"/>
                    
                    <TextView
                        android:id="@+id/currentLifespan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expected Lifespan: --"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="4dp"/>
                    
                    <TextView
                        android:id="@+id/currentColorScheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color Scheme: --"
                        android:textAppearance="?attr/textAppearanceBodyMedium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Edit Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editBirthDateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_birth_date"
                style="?attr/materialButtonStyle"
                android:layout_marginBottom="8dp"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editLifespanButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_lifespan"
                style="?attr/materialButtonStyle"
                android:layout_marginBottom="8dp"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/changeColorSchemeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_color_scheme"
                style="?attr/materialButtonStyle"
                android:layout_marginBottom="32dp"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/applyWallpaperButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apply_wallpaper"
                style="?attr/materialButtonOutlinedStyle"/>
            
        </LinearLayout>
    </ScrollView>
    
    <!-- Count to Day Section -->
    <ScrollView
        android:id="@+id/dayCounterSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Each square represents one day until your event"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:layout_marginBottom="24dp"/>
            
            <!-- Day Counter Settings Display -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="?attr/materialCardViewFilledStyle">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_settings"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_marginBottom="12dp"/>
                    
                    <TextView
                        android:id="@+id/dcEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event: --"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="4dp"/>
                    
                    <TextView
                        android:id="@+id/dcEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Date: --"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="4dp"/>
                    
                    <TextView
                        android:id="@+id/dcDaysRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Days Remaining: --"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="4dp"/>
                    
                    <TextView
                        android:id="@+id/dcColorScheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color Scheme: --"
                        android:textAppearance="?attr/textAppearanceBodyMedium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Momentum Mode Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/noTomorrowButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/momentum_mode_no_tomorrow"
                style="?attr/materialButtonStyle"
                android:layout_marginBottom="8dp"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/vsYesterdayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/momentum_mode_vs_yesterday"
                style="?attr/materialButtonStyle"
                android:layout_marginBottom="8dp"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/customObjectiveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/momentum_mode_custom"
                style="?attr/materialButtonStyle"
                android:layout_marginBottom="8dp"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dcChangeColorSchemeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_color_scheme"
                style="?attr/materialButtonStyle"
                android:layout_marginBottom="24dp"/>

            <!-- Custom Objective Settings (shown when 'Objective' is active) -->
            <LinearLayout
                android:id="@+id/customObjectiveLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="24dp">
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dcEditEventNameButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Name"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_marginBottom="8dp"/>
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dcEditEventDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Target Date"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_marginBottom="8dp"/>
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dcEditStartDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Start Date"
                    style="?attr/materialButtonOutlinedStyle"/>
            </LinearLayout>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/applyDayCounterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apply_wallpaper"
                style="?attr/materialButtonOutlinedStyle"/>
            
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
